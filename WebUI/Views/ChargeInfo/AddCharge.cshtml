@model List<AB_Entity.Sys_DicTypes>
@{
    ViewBag.Title = "AddCharge";
    Dictionary<string, string> list = new Dictionary<string, string>();
}


<form role="form" class="form-horizontal" method="post">
    <h4>新建账单</h4>
    <hr />
    <div class="form-group">
        <label for="firstname" class="col-sm-2 control-label">消费时间</label>
        <div class="col-sm-4">
            <input type="date" name="ChargeTime" required placeholder="请输入消费时间" max="@DateTime.Now.ToString("yyyy-MM-dd")" class="form-control" />
        </div>
        <label for="firstname" class="col-sm-2 control-label">消费金额</label>
        <div class="col-sm-4">
            <input type="number" required min="1" name="Money"  placeholder="请输入消费金额" class="form-control" />
        </div>

    </div>
    <div class="form-group">
        <label for="firstname" class="col-sm-2 control-label">详细地址</label>
        <div class="col-sm-4">
            <textarea name="Address" required placeholder="请输入详细地址" class="form-control" style="resize:none"></textarea>
        </div>
        <label for="firstname" class="col-sm-2 control-label">相关人物</label>
        <div class="col-sm-4">
            <textarea name="Address" required placeholder="请输入相关人物" class="form-control" style="resize:none"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label for="firstname" class="col-sm-2 control-label">消费类型</label>
        <div class="col-sm-10">
            @foreach (var type in Model)
            {
                <div class="radio-inline">
                    <label>
                      
                        <input type="radio" required name="TypeId" onclick="ShowDetailType('@Json.Encode(type)')" value="@type.TypeId" />@type.Sys_Dic_Name
                    </label>
                </div>
            }

        </div>
        <div name="type"></div>

    </div>

    <div class="form-group">

        <label for="firstname" class="col-sm-2 control-label">备注</label>
        <div class="col-sm-4">
            <textarea name="Address" required placeholder="备注信息" class="form-control" style="resize:none"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label"></label>
        <div class="col-sm-4">
            <a class = "btn btn-default" href="/Home/Index">取消</a>
            <button type="submit" class="btn btn-default">提交</button>
        </div>

    </div>
</form>

<script>
    function ShowDetailType(json) {

        var data = JSON.parse(json);
        $("input[name='TypeId']").val(data.TypeId)
        if (data.ParentId ==null)
        {
            $("div[name='type']").css("display", "block");
            $("input[name='TypeIdOther']").attr("required", "required");
            return;
        }
        if (!data.IsChildren)
            return;
        $.ajax({
            url: "/SysDicType/GetDicTypesHtmlByPid",
            data: { ParentId: data.TypeId },
            success: function (html) {
                $("div[name='type']").html(html);
            }
        });
    }
</script>
